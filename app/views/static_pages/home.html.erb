        <h2 class="featurette-heading titulo" id="titulo-process">Nuestro proceso.</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3">
        <span class="glyphicon glyphicon-flash" aria-hidden="true"></span>
