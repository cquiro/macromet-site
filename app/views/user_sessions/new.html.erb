<% provide(:title, "Login") %>

<div class="contejumbo nominferior">
  <div class="container marketing">
    <h1>Inicio de sesión</h1><br>
  </div>
</div><!-- /.container -->

<div class="container marketing">

  <div class="row featurette">
    <div class="col-md-2"></div><!-- /.col-md-2 -->

    <div class="col-md-8">
      <%= form_tag macromet_manejo_contenido_path do %>

        <% flash.each do |type, message| %>
          <div class="alert flash <% type %>">
            <%= message %>
          </div>
        <% end %>

        <div class="form-group">
          <%= label_tag :email, "Email" %>
          <%= text_field_tag :email, params[:email] %>
        </div>

        <div class="form-group">
          <%= label_tag :password, "Contraseña" %>
          <%= password_field_tag :password, params[:password] %>
        </div>

        <div class="form-group">
          <%= submit_tag "Iniciar sesión", class: "btn btn-sm btn-primary", id: "small-btn", role: "button" %>
          <%# <%= link_to "Olvidé mi contraseña", new_password_reset_path, class: "btn btn-lg btn-primary", role: "button" %1> %>
        </div>

      <% end %>
    </div><!-- /.col-md-8 -->

    <div class="col-md-2"></div><!-- /.col-md-2 -->
  </div>

</div>
