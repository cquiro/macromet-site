<!-- Portfolio (lineas de negocio)
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing"  id="portfolio">

  <!-- Section title -->
  <div class="row portafolio">
    <div class="col-md-12">
      <h2 class="featurette-heading titulo" id="titulo-portafolio">Nuestro portafolio.</h2>
    </div>
  </div>

  <br><br>


  <!-- Negocio 1 -->

  <div class="row featurette">
    <div class="col-md-4 col-md-push-8">
      <%= image_tag "Macromet_ExhibicionMJ.jpg", size: "250x250", 
                                                  alt: "Exhibición", 
                                                  class: "img-circle-right" %>
    </div>
    <div class="col-md-8 col-md-pull-4">
      <h2 class="featurette-heading">Exhibición. <span class="text-muted">Hacemos que su producto sobresalga.</span></h2>
